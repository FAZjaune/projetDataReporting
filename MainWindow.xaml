<Window x:Class="Projet4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet4"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button Name="BTNconnexion" Width="200" Height="50" Margin="300,350,0,0" Content="VALIDER" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="CBTNvalider" />
        <Button Name="BTNselect" Width="200" Height="50" Margin="300,50,0,0" Content="SELECT" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="CBTNselect" />


        <DataGrid AutoGenerateColumns="False" Name="gridTest" HorizontalAlignment="Left" Height="380" Margin="20,20,0,0" VerticalAlignment="Top" Width="225" CanUserResizeRows="False" RowDetailsVisibilityMode="Visible" IsReadOnly="True" >
            <DataGrid.Columns>                
                <DataGridTextColumn Header="ID Capteur" Binding="{Binding ID_Cap}"/> 
                <DataGridTextColumn Header="Nom Capteur" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ListBox Margin="550,25,0,0" Height="380" Width="225" Name="listBox" HorizontalAlignment="Left"   VerticalAlignment="Top" />

    </Grid>
    
</Window>
