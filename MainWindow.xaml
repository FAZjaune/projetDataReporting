<Window x:Class="Projet4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet4"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button Name="BTNconnexion" Width="200" Height="50" Margin="300,300,0,0" Content="OK" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="CBTNconnexion" />

        
        <DataGrid AutoGenerateColumns="False" Name="gridTest" HorizontalAlignment="Left" Height="200" Margin="285,50,0,0" VerticalAlignment="Top" Width="225" SelectionChanged="gridTest_SelectionChanged" CanUserResizeRows="False" RowDetailsVisibilityMode="Visible" IsReadOnly="True" >
            <DataGrid.Columns>                
                <DataGridTextColumn Header="ID Capteur" Binding="{Binding ID_Cap}"/> 
                <DataGridTextColumn Header="Nom Capteur" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox Name="yolo" HorizontalAlignment="Left" Height="50" Margin="70,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124"/>
        
    </Grid>
    
</Window>
